<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:id="@+id/constraint_item"
        android:layout_marginTop="5sp"
        android:background="@drawable/item_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:id="@+id/point_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginStart="15sp"
            android:layout_width="7sp"
            android:layout_height="7sp"
            android:background="@drawable/add_shape"
            />
        <TextView
            android:id="@+id/title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/point_"
            app:layout_constraintTop_toTopOf="@id/point_"
            app:layout_constraintBottom_toBottomOf="@id/point_"
            android:layout_marginStart="10sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Sttepa-Carpooling Morocco"
            />
        <TextView
            android:id="@+id/content_item"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textStart"
            android:layout_marginEnd="50sp"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/point_"
            app:layout_constraintTop_toBottomOf="@id/point_"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:text="Sttepa-Carpooling Morocco"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/content_item"
            app:layout_constraintTop_toBottomOf="@id/content_item"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="2021-12-15 20:03"
            />

        <ImageView
            android:id="@+id/fav_this"
            android:layout_width="20sp"
            android:layout_height="20sp"
            app:layout_constraintStart_toEndOf="@id/time_item"
            app:layout_constraintTop_toTopOf="@id/time_item"
            app:layout_constraintBottom_toBottomOf="@id/time_item"
            android:layout_marginStart="20sp"
            android:src="@drawable/ic_favoret_this"
            />

        <ImageView
            android:id="@+id/delete_item"
            android:layout_width="23sp"
            android:layout_height="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete"
            android:layout_margin="7sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>